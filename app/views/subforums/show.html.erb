<% provide(:title, @subforum.name) %>

<div class="row">
  <aside class="span6">
  <h3 class="linkage"><%= link_to "Forums", forums_path %> > <%= link_to @subforum.forum.name, @subforum.forum %></h3></br>
  <h3><%= @subforum.name %> (<%= @subforum.discussions.count.to_s %>) </h3>
  <% if @subforum.discussions.any? %>
    <ul class="subforumlist">
      <%= render @discussions %>
    </ul>
    <% else %>
      <p>No threads to display.</p>
    <% end %>
  </aside>
  <div class="span4">
    <% if signed_in? %>
      <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#newthread">
        New Thread
      </button>
      <div id="newthread" class="collapse out">
        <section class="formy yo">
          <%= render 'discussion_form' %>
        </section>
      </div>
    <% end %>
  </div>
</div>



